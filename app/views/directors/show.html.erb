<% if flash[:notice] %>
  <div class="alert alert-success" role="alert">
    <%= flash[:notice] %>
  </div>
<% end %>
<div class="container">
      <div class="page-header" id="banner">
        <div class="row">
          <div class="col-lg-8 col-md-7 col-sm-6">
          </br>
          </br>
          </br>
		  	<h1>Informações sobre o Diretor: <%= @director.name %></h1>
          </div>
        </div>
      </div>
  </div>
  <%= button_to "Voltar", directors_path, method: :get, class: "btn btn-secondary" %>
<dl>
	<dd>
  	<strong>Nome:</strong> <%= @director.name %><br/>
	</dd>

	<dd>
  	<strong>Nacionalidade:</strong> <%= @director.nationality %><br/>
	</dd>

	<dd>
  	<strong>Data de nascimento:</strong> <%= @director.date_of_birth %><br/>
	</dd>

	<dd>
  	<strong>Gênero favorito:</strong> <%= @director.favorite_genre %><br/>
	</dd>

	<dd>
  	<% @director.movies.each do |movie| %>
			<li><%= movie.name %><br/></li>
	  <% end %>	  
	</dd>
</dl>

<%= button_to 'Editar', edit_director_path(@director), method: :get %>